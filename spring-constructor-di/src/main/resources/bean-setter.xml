<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="organization-bean" class="com.dnoda.spring.domain.Organization">
		<constructor-arg index="0" value="Amazon"></constructor-arg>
		<constructor-arg index="1" value="1994"></constructor-arg>
		<property name="employeeCount" value="100"></property>
		<property name="postalCode" value="33311"></property>
		<property name="slogan" value="this is a slogan"></property>
		<property name="businessService" ref="cloudService"></property>
	</bean>

	<bean id="humanresources-bean" class="com.dnoda.spring.domain.HumanResourcesDepartment">
		<constructor-arg index="0" ref="referral"></constructor-arg>
		<constructor-arg index="1" ref="organization-bean"></constructor-arg>
		<property name="departmentName" value="Human Resources"></property>
	</bean>

	<bean id="cloudService" class="com.dnoda.spring.serviceimpl.CloudServiceImpl"></bean>

	<bean id="ecommerceService" class="com.dnoda.spring.serviceimpl.EcommerceServiceImpl"></bean>

	<bean id="agency" class="com.dnoda.spring.serviceimpl.AgencyRecruitmentServiceImpl"></bean>
	
	<bean id="referral" class="com.dnoda.spring.serviceimpl.ReferralRecruitmentServiceImpl"></bean>	
</beans>
